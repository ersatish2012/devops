
start() {
  echo 'Starting serviceâ€¦' >&2
  sh /opt/apache-tomcat-8.5.37/bin/startup.sh
  echo 'Service started' >&2
}


stop() {
  sh /opt/apache-tomcat-8.5.37/bin/shutdown.sh
  echo 'Service stopped' >&2
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
esac
